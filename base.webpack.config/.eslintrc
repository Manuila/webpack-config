{
  "parser": "babel-eslint",
  
  "parserOptions": {
    "ecmaVersion": 2018
  },

  "extends": [
    "airbnb-base"
  ],
  
  "env": {
    "es6": true,
    "browser": true
  },

  "rules": {
    "linebreak-style": 0,
    "import/prefer-default-export": "warn",
    "no-console": "warn",
    "no-use-before-define": "warn",
    "no-underscore-dangle": "warn",
    "no-shadow": "warn",
    "max-len": "warn",
    "class-methods-use-this": "warn"
  }
}
